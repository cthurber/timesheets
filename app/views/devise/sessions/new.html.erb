<div class="container">
    <div class="box bottom"></div>
    <div class="box middle">
      <h1 class="title">Login</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-container">
            <%= f.email_field :email, autocomplete: "off", :autofocus => false,  id: "email"%>
            <%= f.label :email %>
            <div class="underline"></div>
          </div>

          <div class="input-container">
              <%= f.password_field :password, autocomplete: "off", :autofocus => false, id: "password" %>
              <%= f.label :password%>
              <div class="underline"></div>
          </div>

            <!-- <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %> -->

          <div class="button-container">
              <button><span><%= f.submit "Log in" %></span></button>
          </div>
          <div class="footer"><%= render "devise/shared/links" %></div>
      <% end %>
    </div>
    <div class="box top">
      <div class="add"></div>
      <h1 class="title">Register
        <div class="close"></div>
      </h1>
      <!-- Ajax response goes here -->
    </div>
